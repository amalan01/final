<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center md-3"><i class="fas fa-sign-in-alt" style='font-size:48px;color:green'></i> Login
            </h1>
            <%- include('partials/messages.ejs') %>
                <form action="/users/login" method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Enter Password" />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Login</button>
                    </div>
                </form>
                <p class="lead mt-4">No Account?<a href="/users/register" style="margin-left: 10px;">Register</a></p>
        </div>
    </div>
</div>