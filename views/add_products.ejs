<%- include('partials/header') %>
    <div class="container">
        <div class="col-lg-5 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add New Product</h3>
                </div>
                <div class="card-body p-4">
                    <div>
                        <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="ProductName">Product Name</label>
                                <input type="text" name="ProductName" class="form-control form-control-lg"
                                    placeholder="Enter Product Name" required />
                            </div>
                            <div class="mb-3">
                                <label for="Quantity">Quantity</label>
                                <input type="text" name="Quantity" class="form-control form-control-lg"
                                    placeholder="Enter Quantity" required />
                            </div>
                            <div class="mb-3">
                                <label for="Price">Price</label>
                                <input type="text" name="Price" class="form-control form-control-lg"
                                    placeholder="Enter Price" required />
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Select Image</label>
                                <input name="image" class="form-control form-control-lg" type="file" required />
                            </div>
                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="Add Product" class="btn btn-primary btn-lg" />
                            </div>
                        </form>
                        <div class="mb-3 d-grid">
                            <a href="/dashboard" type="button" value="Cancel" class="btn btn-warning btn-lg">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>