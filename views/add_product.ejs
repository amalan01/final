<%- include('layout/header') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-primary">
                        <h3 class="text-light">Add New Product</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/products/add" method="post" id="add-form" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control form-control-lg"
                                    placeholder="Enter Name" required />
                            </div>

                            <div class="mb-3">
                                <label for="price">Price</label>
                                <input type="price" name="price" class="form-control form-control-lg"
                                    placeholder="Enter Price" required />
                            </div>

                            <div class="mb-3">
                                <label for="quantity">Quantity</label>
                                <input type="quantity" name="quantity" class="form-control form-control-lg"
                                    placeholder="Enter Quantity" required />
                            </div>

                            <div class="mb-3">
                                <label for="image" class="form-label">Select Image</label>
                                <input class="form-control form-control-lg" type="file" name="image" required />
                            </div>

                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="Add Product" class="btn btn-primary btn-lg">
                            </div>
                        </form>
                        <div class="mb-3 d-grid">
                            <a type="text" href="/products" value="Cancel" class="btn btn-warning btn-lg">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('layout/footer') %>